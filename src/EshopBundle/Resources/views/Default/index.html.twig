{% extends "base.html.twig" %} 

{% block title %} Produkty {% endblock %}

{% block body %}
<table class="table">
    <thead>
        <th>Název</th>
        <th>Popis</th>
        <th>Kategorie</th>
        <th>Cena</th>
    </thead>
    <tbody>
        {% for product in products%}
            <tr>
                <td>{{ product.name}}</td>
                <td> {{product.description}} </td>
                <td> {% if product.category is not null %}
                    {{product.category.name}}
                    {% else %}
                        Nemá kategorii
                    {% endif %}
                </td>
                <td> {{ product.price}}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}